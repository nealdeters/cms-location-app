/* smartphones, iPhone, portrait 480x320 phones */
@media (max-width:640px) {  
  img.img-thumbnail {
    display: block;
    margin-left: auto;
    margin-right: auto;
  }
  .mobile-tablet-center.h3 {
    display: block;
    margin-left: auto;
    margin-right: auto;
  }
}

/* portrait tablets, portrait iPad, landscape e-readers, landscape 800x480 or 854x480 phones */
@media (max-width: 992px) {  
  img.img-thumbnail {
    display: block;
    margin-left: auto;
    margin-right: auto;
  }
  h3.mobile-tablet-center {
    text-align: center;
  }
  span.mobile-tablet-center {
    text-align: center;
    display: block;
  }
  p.mobile-tablet-center {
    text-align: center;
    display: block;
  }
  a.mobile-tablet-center{
    text-align: center;
    display: block;
  }
}