// // "bootstrap-sprockets" must be imported before "bootstrap" and "bootstrap/variables"
@import "font-awesome";



$tagline: #ffffff;
$taglineColor: #ffffff;

$map: #f5f5f5;
$mapColor: red;
$about: #ffffff;
$aboutColor: #666;
$services: #6dbd63;
$servicesColor: #666;
$areas: #f5f5f5;
$areasColor: #666;
$content: #ffffff;
$contentColor: #666;

$bodyColor: #666;

$bodyColorHover: #6dbd63;


ul, menu, dir {
    display: block;
    list-style-type: disc;
    -webkit-margin-before: 0em;
    -webkit-margin-after: 0em;
    -webkit-margin-start: 0px;
    -webkit-margin-end: 0px;
    -webkit-padding-start: 0px;
}

.brand-logo {
  display: inline-block;
  height: 100%;
  vertical-align: middle;
}

.header h1.logo {
    text-transform: uppercase;
    font-weight: bold;
    font-size: 28px;
    max-height: 50px;
}

.bg-slider-wrapper .flexslider .slide.slide-header {
  background: $about no-repeat 50% top;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

.map {
  padding: 80px 0;
  position: relative;
  background: $map no-repeat center center;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  min-height: 516px;
  color: $mapColor;
}



.location-about {
  padding: 80px 0;
  position: relative;
  background: $about no-repeat center center;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  min-height: 516px;
  color: $aboutColor;
}

.services {
  padding: 80px 0;
  position: relative;
  background: $services no-repeat center center;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  min-height: 516px;
  color: $servicesColor;
}

.areas {
  padding: 80px 0;
  position: relative;
  background: $areas no-repeat center center;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  min-height: 516px;
  color: $areasColor;
}

.content {
  padding: 80px 0;
  position: relative;
  background: $content no-repeat center center;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  min-height: 516px;
  color: $contentColor;
}

.modal-content {
    position: relative;
    background-color: $about;
    -webkit-background-clip: padding-box;
    background-clip: padding-box;
    border: 1px solid #999;
    border: 1px solid rgba(0, 0, 0, .2);
    border-radius: 6px;
    outline: 0;
    -webkit-box-shadow: 0 3px 9px rgba(0, 0, 0, .5);
    box-shadow: 0 3px 9px rgba(0, 0, 0, .5);
}

.form-control {
    display: block;
    width: 100%;
    height: 34px;
    padding: 6px 12px;
    font-size: 14px;
    line-height: 1.42857143;
    color: #555;
    background-color: $about;
    background-image: none;
    border: 1px solid #ccc;
    border-radius: 4px;
    -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
    -webkit-transition: border-color ease-in-out .15s, -webkit-box-shadow ease-in-out .15s;
    -o-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
    transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
}

/* ======= Tempo Styling customized for location page ======= */
body {
  font-family: 'Lato', arial, sans-serif;
  color: $bodyColor;
  font-size: 16px;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

h1,
h2,
h3,
h4,
h5,
h6 {
  font-family: 'Montserrat', sans-serif;
  font-weight: bold;
}
p {
  color: $bodyColor;
  font-size: 16px;
}

.map .p {
  color: $mapColor;
}
a {
  color: $bodyColorHover;
  -webkit-transition: all 0.4s ease-in-out;
  -moz-transition: all 0.4s ease-in-out;
  -ms-transition: all 0.4s ease-in-out;
  -o-transition: all 0.4s ease-in-out;
}
a:hover {
  text-decoration: none;
  color: #48953f;
}
a:focus {
  text-decoration: none;
}
.btn,
a.btn {
  -webkit-transition: all 0.4s ease-in-out;
  -moz-transition: all 0.4s ease-in-out;
  -ms-transition: all 0.4s ease-in-out;
  -o-transition: all 0.4s ease-in-out;
  font-family: 'Montserrat', sans-serif;
  padding: 8px 16px;
}
.btn .fa,
a.btn .fa {
  color: $about;
  margin-right: 5px;
}
a.btn-cta-primary,
.btn-cta-primary {
  background: $bodyColorHover;
  border: 2px solid $bodyColorHover;
  color: $about;
  text-transform: uppercase;
}
a.btn-cta-primary:hover,
.btn-cta-primary:hover {
  background: #51a746;
  border: 2px solid #51a746;
  color: $about;
}
a.btn-cta-secondary,
.btn-cta-secondary {
  background: $about;
  border: 2px solid $bodyColorHover;
  color: $bodyColorHover;
}
a.btn-cta-secondary .fa,
.btn-cta-secondary .fa {
  margin-left: 5px;
  color: $bodyColorHover;
}
a.btn-cta-secondary:hover,
.btn-cta-secondary:hover {
  background: $about;
  border: 2px solid #51a746;
  color: #51a746;
}
a.btn-cta-secondary:hover .fa,
.btn-cta-secondary:hover .fa {
  color: #51a746;
}

/* ======= Header ======= */
.header {
  padding: 15px 0;
  background: $about;
  z-index: 888;
}
.header.navbar-fixed-top {
  border: none;
  -webkit-box-shadow: 0 0 4px rgba(0, 0, 0, 0.5);
  -moz-box-shadow: 0 0 4px rgba(0, 0, 0, 0.5);
  box-shadow: 0 0 4px rgba(0, 0, 0, 0.5);
}

.header h1.logo a:hover {
  color: $bodyColorHover;
}


.header .main-nav .nav .nav-item.nav-item-cta .btn-cta-primary {
  -webkit-transition: all 0.4s ease-in-out;
  -moz-transition: all 0.4s ease-in-out;
  -ms-transition: all 0.4s ease-in-out;
  -o-transition: all 0.4s ease-in-out;
  padding: 6px 12px;
  color: $about;
  font-weight: 300;
  font-family: 'Montserrat', sans-serif;
  margin-top: 2px;
  background: $bodyColorHover;
}
.header .main-nav .nav .nav-item.nav-item-cta .btn-cta-primary:hover {
  background: #51a746;
  border: 2px solid #51a746;
  color: $about;
}
.header .main-nav .nav .nav-item a {
  color: $bodyColor;
  -webkit-transition: none;
  -moz-transition: none;
  -ms-transition: none;
  -o-transition: none;
}
.header .main-nav .nav .nav-item a:hover {
  color: $bodyColorHover;
  background: none;
}

.header .main-nav .nav .nav-item.active {
  color: $bodyColorHover;
}

.promo .intro .title {
  color: $about;
  font-size: 38px;
  text-shadow: 0 1px 1px rgba(0, 0, 0, 0.5);
  max-width: 720px;
  font-weight: bold;
  margin-bottom: 15px;
}
.promo .intro .summary {
  color: $about;
  font-size: 22px;
  max-width: 680px;
  text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
  margin-bottom: 15px;
}

.promo .social {
  background: $bodyColorHover;
  padding: 8px 0;
  -webkit-opacity: 0.8;
  -moz-opacity: 0.8;
  opacity: 0.8;
  color: $about;
  font-size: 13px;
}
