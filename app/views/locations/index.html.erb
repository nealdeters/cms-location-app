<section class="section">  
  <div class="container">

    <div class="btn-group">
      <button class="btn btn-default btn-xs dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Filter by Name <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <li><a href="/brands/<%= @brand.id %>/locations?filter=business_name&filter_order=asc">By Name Ascending</a>
        <li><a href="/brands/<%= @brand.id %>/locations?filter=business_name&filter_order=desc">By Name Descending</a> 
      </ul>
    </div>

    <div class="btn-group">
      <button class="btn btn-default btn-xs dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Filter by Created At <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <li><a href="/brands/<%= @brand.id %>/locations?filter=created_at&filter_order=desc">Recently Created</a>
        <li><a href="/brands/<%= @brand.id %>/locations?filter=created_at&filter_order=asc">Oldest Creation</a> 
      </ul>
    </div>

    <div class="btn-group">
      <button class="btn btn-default btn-xs dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Filter by Updated At <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <li><a href="/brands/<%= @brand.id %>/locations?filter=updated_at&filter_order=desc">Recently Updated</a>
        <li><a href="/brands/<%= @brand.id %>/locations?filter=updated_at&filter_order=asc">Never Updated</a> 
      </ul>
    </div>

    <%= link_to "Add new location", new_brand_location_path, class: "btn btn-default btn-xs navbar-right" %>
    <%= link_to "Export Locations", brand_locations_path(format: "csv"), class: "btn btn-default btn-xs navbar-right" %>
    <a href="#" class="btn btn-default btn-xs navbar-right">Import Locations</a>

    <table class="table table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>Location Name</th>
          <th>City</th>
          <th>State</th>
          <th>Updated at</th>
          <th>Created at</th>
          <th>View</th> 
          <th>Edit</th>
          <th>Delete</th>  
        </tr>
      </thead>
    <% @locations.each do |location| %>
      <tbody>
        <tr>
          <td><%= location.id %></td>
          <td><%= location.business_name %></td>
          <td><%= location.city %></td>
          <td><%= location.state %></td>
          <td><%= location.updated_at %></td>
          <td><%= location.created_at %></td>
          <td>
            <%= link_to "View", location_subdomain_url(location), class: "btn btn-default btn-xs" %>
          </td>
          <td>
            <%= link_to "Edit", edit_brand_location_path(location.brand, location.id), class: "btn btn-default btn-xs" %>
          </td> 
          <td>
            <%= link_to "Delete", brand_location_path(location.brand, location.id), method: :delete, class: "btn btn-danger btn-xs", data: {confirm: "Are you sure?"}  %>
          </td>  
        </tr>
      </tbody>
    <% end %>
    </table>
  </div>
</section>