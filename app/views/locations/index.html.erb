<div class="btn-group">
  <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Filter by City <span class="caret"></span>
  </button>
  <ul class="dropdown-menu">
    <li><a href="<%= brand_location_path %>?filter=city&filter_order=asc">By Name Ascending</a>
    <li><a href="<%= brand_location_path %>?filter=city&filter_order=desc">By Name Descending</a> 
  </ul>
</div>

<div class="btn-group">
  <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Filter by State <span class="caret"></span>
  </button>
  <ul class="dropdown-menu">
    <li><a href="<%= brand_location_path %>?filter=state&filter_order=asc">By Name Ascending</a>
    <li><a href="<%= brand_location_path %>?filter=state&filter_order=desc">By Name Descending</a> 
  </ul>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Location ID</th>
      <th>Location Name</th>
      <th>City</th>
      <th>State</th>
      <th>Updated at</th>
      <th>Created at</th>
      <th>View</th> 
      <th>Edit</th>
      <th>Delete</th>  
    </tr>
  </thead>
<% @locations.each do |location| %>
  <tbody>
    <tr>
      <td><%= location.id %></td>
      <td><%= location.business_name %></td>
      <td><%= location.city %></td>
      <td><%= location.state %></td>
      <td><%= location.updated_at %></td>
      <td><%= location.created_at %></td>
      <td>
        <%= link_to "View", "/brands/#{location.brand_id}/locations/#{location.id}", class: "btn btn-default" %>
      </td>
      <td>
        <%= link_to "Edit", "/brands/#{location.brand_id}/locations/#{location.id}/edit", class: "btn btn-info" %>
      </td> 
      <td>
        <%= link_to "Delete", "/brands/#{location.brand_id}/locations/#{location.id}", method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure?"}  %>
      </td>  
    </tr>
  </tbody>
  <br>
<% end %>
</table>
<%= link_to "Add new location", brand_location_new_path(@brand), class: "btn btn-default" %>