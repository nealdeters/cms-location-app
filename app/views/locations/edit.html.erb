<div class="col-md-12">
  <h1>Edit Location  <span class="edit-name">: <%= @location.business_name %></span></h1>

  <!-- <ul class="nav nav-tabs">
    <li role="presentation"><a href="#local">Local</a></li>
    <li role="presentation"><a href="#about">About</a></li>
    <li role="presentation"><a href="#meta">Meta</a></li>
  </ul> -->

  <%= form_tag brand_location_update_path, multipart: true, method: :patch do %>
  
  <div class="row">
    <div class="col-md-12">
    <br>
    <% if @location.images.first != nil %>  
      <% if @location.images.first.image_path.nil? %>
        <img src="<%= @location.images.first.image.thumb %>">
      <% else %>
        <%= image_tag @location.images.first.image_path, heigth: '100', width: '100' %>
      <% end %>
    <% end %>
    <br>
    <h3>Location Information</h3>
      <div class="col-md-6">
        <table class="table table-hover">
          <tbody>
            <tr>
              <td><%= label_tag :image, "Upload an image" %></td>
              <td><%= file_field_tag :image %></td>
            </tr>
            <tr>
              <td><%= label_tag :business_name %></td>
              <td><%= text_field_tag :business_name, @location.business_name %></td>
            </tr>
            <tr>
              <td><%= label_tag :street_address_1 %></td>
              <td><%= text_field_tag :address_1, @location.address_1 %></td>
            </tr>
            <tr>
              <td><%= label_tag :street_address_2 %></td>
              <td><%= text_field_tag :address_2, @location.address_2 %></td>
            </tr>
            <tr>
              <td><%= label_tag :city %></td>
              <td><%= text_field_tag :city, @location.city %></td>
            </tr>
            <tr>
              <td><%= label_tag :state %></td>
              <td><%= text_field_tag :state, @location.state %></td>
            </tr>
            <tr>
              <td><%= label_tag :zipcode %></td>
              <td><%= text_field_tag :zipcode, @location.zipcode %></td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="col-md-6">
        <table class="table table-hover">
          <tbody>  
            <tr>
              <td><%= label_tag :phone_number %></td>
              <td><%= text_field_tag :phone_number, @location.phone_number %></td>
            </tr>
            <tr>
              <td><%= label_tag :hours_of_operation %></td>
              <td><%= text_field_tag :hours_of_operation, @location.hours_of_operation %></td>
            </tr>
          </tbody>
        </table>
      </div>
      </div>
    </div>
    
  <div class="row">
    <div class="col-md-12"> 
    <br>
    <h3>About</h3>
    <table class="table table-hover">
      <tbody>  
        <tr>
            <td><%= label_tag :business_description %></td>
            <td><%= text_area_tag :business_description, @location.business_description, size: "75x10"  %></td>
        </tr>

        <tr>
            <td><%= label_tag :service_description %></td>
            <td><%= text_area_tag :service_description, @location.service_description, size: "75x10" %></td>
        </tr>

        <tr>
              <td><%= label_tag :areas_served %></td>
              <td><%= text_field_tag :areas_served, @location.areas_served, size: "75x10" %></td>
        </tr>

        <tr>
              <td><%= label_tag :zipcodes_served %></td>
              <td><%= text_field_tag :zipcodes_served, @location.zipcodes_served, size: "75x10" %></td>
        </tr>

        <tr>
            <td><%= label_tag :languages %></td>
            <td><%= text_field_tag :languages, @location.languages, size: "75x10" %></td>
        </tr>
        <tr>
            <td><%= label_tag :tagline_title %></td>
            <td><%= text_field_tag :tagline_title, @location.tagline_title, size: "75x10" %></td>
        </tr>
        <tr>
            <td><%= label_tag :tagline_summary %></td>
            <td><%= text_field_tag :tagline_summary, @location.tagline_summary, size: "75x10" %></td>
        </tr>
      </tbody>
    </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
    <br>
    <h3>Meta Information</h3>
    <table class="table table-hover" id="meta">
      <tbody>  
        <tr>
            <td><%= label_tag :meta_description %></td>
            <td><%= text_area_tag :meta_description, @location.meta_description, size: "75x10"  %></td>
        </tr>

        <tr>
            <td><%= label_tag :meta_keywords %></td>
            <td><%= text_area_tag :meta_keywords, @location.meta_keywords, size: "75x10" %></td>
        </tr>

        <tr>
              <td><%= label_tag :meta_title %></td>
              <td><%= text_field_tag :meta_title, @location.meta_title, size: "75x10" %></td>
        </tr>

        <tr>
              <td><%= label_tag :meta_url %></td>
              <td><%= text_field_tag :meta_url, @location.meta_url, size: "75x10" %></td>
        </tr>
      </tbody>
    </table>
    </div>
  </div>

  <%= submit_tag 'Update Location', class: "btn btn-default"%>

  <% end %>
</div>  