<section class="section">  
  <div class="container">

    <table class="table table-hover table-responsive">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Thumbnail</th>
          <th>Updated at</th>
          <th>Created at</th>
          <th>View</th> 
          <th>Edit</th>
          <th>Delete</th>  
        </tr>
      </thead>
    <% @images.each do |image| %>
      <tbody>
        <tr>
          <td><%= image.id %></td>
          <td><%= image.image_name %></td>
          <td><img src="<%= image.image.thumb.url %>"></td>
          <td><%= image.updated_at %></td>
          <td><%= image.created_at %></td>
          <td>
            <%= link_to 'View', "#imageModal-#{image.id}", "data-toggle" => "modal", class: 'btn btn-cta-cms-view btn-xs' %>
          </td>
          <td>
            <%= link_to "Edit", edit_brand_image_path(:id => image.id), class: "btn btn-cta-cms-view btn-xs" %>
          </td> 
          <td>
            <%= link_to "Delete", brand_image_path(:id => image.id), method: :delete, class: "btn btn-cta-cms-delete btn-xs", data: {confirm: "Are you sure?"}  %>
          </td>  
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</section>

<% @images.each do |image| %>
<!--- MODAL -->
<div class="modal modal-wide fade" id="imageModal-<%= image.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        <img src="<%= image.image.url %>" class="center-image">
      </div>
    </div>
  </div>
</div>
<!--END MODAL-->
<% end %>