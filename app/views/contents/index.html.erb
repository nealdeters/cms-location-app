<section class="section">  
  <div class="container">

    <table class="table table-hover table-responsive">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Category</th>
          <th>Updated at</th>
          <th>Created at</th>
          <th>View</th> 
          <th>Edit</th>
          <th>Delete</th>  
        </tr>
      </thead>
    <% @contents.each do |content| %>
      <tbody>
        <tr>
          <td><%= content.id %></td>
          <td><%= content.content_name %></td>
          <td><%= content.content_category %></td>
          <td><%= content.updated_at %></td>
          <td><%= content.created_at %></td>
          <td>
            <%= link_to 'View', "#contentModal-#{content.id}", "data-toggle" => "modal", class: 'btn btn-cta-cms-view btn-xs' %>
          </td>
          <td>
            <%= link_to "Edit", edit_brand_content_path(:id => content.id), class: "btn btn-cta-cms-view btn-xs" %>
          </td> 
          <td>
            <%= link_to "Delete", brand_content_path(:id => content.id), method: :delete, class: "btn btn-cta-cms-delete btn-xs", data: {confirm: "Are you sure?"}  %>
          </td>  
        </tr>
      </tbody>
    <% end %>
    </table>
  </div>
</section>

<% @contents.each do |content| %>
<!--- MODAL -->
<div class="modal fade" id="contentModal-<%= content.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        <h2><%= content.content_name %></h2>
        <p><%= content.content_field %>></p>
      </div>
    </div>
  </div>
</div>
<!--END MODAL-->
<% end %>