<section class="section">  
  <div class="container">

    <table class="table table-hover table-responsive">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Category</th>
          <th>Updated at</th>
          <th>Created at</th>
          <th>View</th> 
          <th>Edit</th>
          <th>Delete</th>  
        </tr>
      </thead>
    <% @contents.each do |content| %>
      <tbody>
        <tr>
          <td><%= content.id %></td>
          <td><%= content.content_name %></td>
          <td><%= content.content_category %></td>
          <td><%= content.updated_at %></td>
          <td><%= content.created_at %></td>
          <td>
            <%= link_to "View", brand_content_path(:id => content.id), class: "btn btn-cta-cms-view btn-xs" %>
          </td>
          <td>
            <%= link_to "Edit", edit_brand_content_path(:id => content.id), class: "btn btn-cta-cms-view btn-xs" %>
          </td> 
          <td>
            <%= link_to "Delete", brand_content_path(:id => content.id), method: :delete, class: "btn btn-cta-cms-delete btn-xs", data: {confirm: "Are you sure?"}  %>
          </td>  
        </tr>
      </tbody>
    <% end %>
    </table>
  </div>
</section>