<section class="section">  
  <div class="container">

    <% if @content.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@content.errors.count, "error") %> prohibited this content from being saved:</h2>
     
        <ul>
        <% @content.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="col-md-12">
      <h1>Edit Content  <span class="edit-name">: <%= @content.content_name %></span></h1>

      <!-- <ul class="nav nav-tabs">
        <li role="presentation"><a href="#local">Local</a></li>
        <li role="presentation"><a href="#about">About</a></li>
        <li role="presentation"><a href="#meta">Meta</a></li>
      </ul> -->

      <%= form_tag brand_content_path, method: :patch do %>
      
      <div class="row">
        <div class="col-md-12">
          <table class="table table-hover">
            <tbody>  
              <tr>
                <td><%= label_tag :title %></td>
                <td><%= text_field_tag :content_name, @content.content_name, class: "form-control" %></td>
              </tr>
              <tr>
                <td><%= label_tag :category %></td>
                <td><%= text_field_tag :content_category, @content.content_category, class: "form-control" %></td>
              </tr>
              <tr>
                <td><%= label_tag :content %></td>
                <td><%= text_area_tag :content_field, @content.content_field, class: "form-control", size: "20x10" %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <%= submit_tag 'Update Location', class: "btn btn-cta-cms-search btn-xs"%>

      <% end %>
    </div>  
  </div>
</section>