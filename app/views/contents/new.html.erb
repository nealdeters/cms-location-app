<section class="section">  
  <div class="container">

    <div class="col-md-12">
      <h1>Add Content</h1>

      <%= form_tag brand_contents_path, method: :post do %>

        <table class="table table-hover">
          <tbody>  
              <tr>
                <td><%= label_tag :title %></td>
                <td><%= text_field_tag :content_name, @content.content_name %></td>
              </tr>
              <tr>
                <td><%= label_tag :category %></td>
                <td><%= text_field_tag :content_category, @content.content_category %></td>
              </tr>
              <tr>
                <td><%= label_tag :content %></td>
                <td><%= text_field_tag :content_field, @content.content_field %></td>
              </tr>
          </tbody>
        </table>

      <%= submit_tag 'Add Content', class: "btn btn-default btn-xs"%>

      <% end %>
    </div>  
  </div>
</section>