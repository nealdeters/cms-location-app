<div class="col-md-12">
  <h1>Add Content</h1>

  <%= form_tag brand_content_path, method: :post do %>

    <table class="table table-hover">
      <tbody>  
          <tr>
            <tr>
              <td>
                <td><%= label_tag :name %></td>
                <td><%= text_field_tag :content_name %></td>
              </td>
              <td>
                  <td><%= label_tag :category %></td>
                  <td><%= text_field_tag :content_category %></td>
              </td>
            </tr>
            <tr>
              <td>
                <td><%= label_tag :content %></td>
                <td><%= text_field_tag :content_field %></td>
              </td>
              <td>
                  <td></td>
                  <td></td>
              </td>
            </tr>
      </tbody>
    </table>

  <%= submit_tag 'Add Content', class: "btn btn-default"%>

  <% end %>
</div>  