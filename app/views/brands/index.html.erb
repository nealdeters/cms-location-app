<section class="section">  
  <div class="container">

    <table class="table table-hover">
        <thead>
          <tr>
            <th>ID</th>
            <th>Brand Name</th>
            <th>Total Locations</th>
            <th>Updated at</th>
            <th>Created at</th>
            <th>View</th> 
            <th>Edit</th>
            <th>Delete</th>  
          </tr>
        </thead>
      <% @brands.each do |brand| %>
        <tbody>
          <tr>
            <td><%= brand.id %></td>
            <td><%= brand.brand_name %></td>
            <td><%= brand.location_count %></td>
            <td><%= brand.updated_at %></td>
            <td><%= brand.created_at %></td>
            <td>
              <%= link_to "View", brand_locations_path("#{brand.id}"), class: "btn btn-cta-cms-view btn-xs" %>
            </td>
            <td>
              <%= link_to "Edit", edit_brand_path("#{brand.id}"), class: "btn btn-cta-cms-view btn-xs" %>
            </td> 
            <td>
              <%= link_to "Delete", "/brands/#{brand.id}", method: :delete, class: "btn btn-cta-cms-delete btn-xs", data: {confirm: "Are you sure?"}  %>
            </td>  
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
</section>