<div class="btn-group">
  <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Filter by Name <span class="caret"></span>
  </button>
  <ul class="dropdown-menu">
    <li><a href="/brands?filter=brand_name&filter_order=asc">By Name Ascending</a>
    <li><a href="/brands?filter=brand_name&filter_order=desc">By Name Descending</a> 
  </ul>
</div>

<div class="btn-group">
  <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Filter by Created At <span class="caret"></span>
  </button>
  <ul class="dropdown-menu">
    <li><a href="/brands?filter=created_at&filter_order=asc">By Creation Ascending</a>
    <li><a href="/brands?filter=created_at&filter_order=desc">By Creation Descending</a> 
  </ul>
</div>

<div class="btn-group">
  <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Filter by Updated At <span class="caret"></span>
  </button>
  <ul class="dropdown-menu">
    <li><a href="/brands?filter=updated_at&filter_order=asc">By Creation Ascending</a>
    <li><a href="/brands?filter=updated_at&filter_order=desc">By Creation Descending</a> 
  </ul>
</div>

<%= link_to "Add new brand", "/brands/new", class: "btn btn-default navbar-right" %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Brand ID</th>
      <th>Brand Name</th>
      <th>Total Locations</th>
      <th>Updated at</th>
      <th>Created at</th>
      <th>View</th> 
      <th>Edit</th>
      <th>Delete</th>  
    </tr>
  </thead>
<% @brands.each do |brand| %>
  <tbody>
    <tr>
      <td><%= brand.id %></td>
      <td><%= brand.brand_name %></td>
      <td><%= brand.location_count %></td>
      <td><%= brand.updated_at %></td>
      <td><%= brand.created_at %></td>
      <td>
        <%= link_to "View", "/brands/#{brand.id}/locations", class: "btn btn-default" %>
      </td>
      <td>
        <%= link_to "Edit", "/brands/#{brand.id}/edit", class: "btn btn-info" %>
      </td> 
      <td>
        <%= link_to "Delete", "/brands/#{brand.id}", method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure?"}  %>
      </td>  
    </tr>
  </tbody>
<% end %>
</table>